<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/med_purple</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="toolbarStyle">@style/toolbar_style</item>-->
        <item name="drawerArrowStyle">@style/drawerIndicator</item>
    </style>

    <style name="toolbar_style" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="titleTextColor">@color/white</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:background">@color/med_purple</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackgroundBorderless</item>
    </style>

    <style name="DialogAnim">
        <item name="android:windowEnterAnimation">@anim/reviews_slide_in</item>
        <item name="android:windowExitAnimation">@anim/reviews_slide_out</item>
    </style>
    <style name="switch_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/switch_bg</item>
    </style>

    <style name="drawerIndicator" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="NavTheme" >
        <item name="colorPrimary">@color/white</item>
        <item name="itemBackground">@drawable/nav_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:listDivider">@color/light_purple</item>
    </style>

    <style name="spinner" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:paddingStart">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:dropDownVerticalOffset">@dimen/large_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:paddingEnd">@dimen/med_margin</item>
    </style>


</resources>
