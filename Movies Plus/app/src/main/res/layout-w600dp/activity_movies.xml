<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MoviesActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/movies_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:theme="@style/toolbar_style"
        app:title="@string/movies"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/small_margin"
        android:layout_below="@id/movies_toolbar"
        android:background="@color/black">
        <TextView
            android:id="@+id/movies_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popular"
            android:textColor="@color/light_gray"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_marginTop="@dimen/small_margin"/>
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:background="@color/med_purple"
            android:layout_marginBottom="@dimen/small_margin"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/movies_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            android:orientation="vertical"
            tools:listitem="@layout/home_rec_item"
            app:spanCount="5"/>
    </LinearLayout>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_loading"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:visibility="visible"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/loading_animation"
        app:lottie_repeatCount="100"
        app:lottie_colorFilter="@color/light_purple"
        android:layout_centerInParent="true"/>
    <include
        layout="@layout/error_layout"
        android:layout_below="@+id/movies_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    <com.google.android.gms.ads.AdView
        android:id="@+id/movies_act_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:adUnitId="string/home_banner_unitId"
        app:adSize="BANNER"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>